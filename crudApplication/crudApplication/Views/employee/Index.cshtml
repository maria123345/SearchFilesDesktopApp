<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" cellspacing="0">
                <thead>
                    <tr class="text-center">
                        <th></th>
                        <th>
                            @Html.DisplayNameFor(model => model.employeeList.FirstOrDefault().Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.employeeList.FirstOrDefault().LastName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.employeeList.FirstOrDefault().Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.employeeList.FirstOrDefault().Brithdate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.employeeList.FirstOrDefault().Gender)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.employeeList.FirstOrDefault().Phone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.employeeList.FirstOrDefault().Joindate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.employeeList.FirstOrDefault().Department)
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.employeeList)
                    {
                        <tr>
                            <td>
                                @Html.ActionLink("Edit", "CreateEmployee", new  { id = item.Id }, new { @class = "btn btn-primary" })
                                |

                                @Html.ActionLink("Delete", "Del", new { id = item.Id }, new { @class = "btn btn-danger", onclick = "return confrim('Do you want del?')" })
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Brithdate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Gender)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Joindate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Department)
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

